#!/bin/sh
set -e
# Create SISUI autostart entry (visible only in SIS UI desktop session)
install -d -m 0755 /etc/xdg/autostart
cat > /etc/xdg/autostart/sis-ui.desktop <<EOT
[Desktop Entry]
Type=Application
Name=SIS UI
Exec=/usr/bin/sis-ui
Icon=sis-ui
X-GNOME-Autostart-enabled=true
OnlyShowIn=SISUI;
NoDisplay=false
EOT
exit 0
