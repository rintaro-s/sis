{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "sis-ui",
  "version": "0.1.0",
        "identifier": "lorinta.sis-ui",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "desktop",
        "title": "SIS Desktop",
        "fullscreen": true,
        "decorations": false,
        "resizable": false,
        "visible": true,
        "skipTaskbar": true
      },
      {
        "label": "topbar",
        "title": "SIS TopBar",
        "width": 1920,
        "height": 48,
        "x": 0,
        "y": 0,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "label": "dock",
        "title": "SIS Dock",
        "width": 1920,
        "height": 64,
        "x": 0,
        "y": 1016,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
  "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
